doctype html
html(lang='es')
  head
    include partials/header
  body
    .contenedor-principal.login
      .caja-login
        .encabezado
          h2 #{titulo}
          if error
            p(style="color:#d93b5b;font-weight:700;font-size:2rem;margin:0;") #{error}
          if errores
            each error in errores
              p #{error}
        form(action=formAction method='POST')
          if reestablecer==false
            p Escribe tu correo electrónico para que podamos enviarte un mensaje y permitirte cambiar tu password
            .campo
                label E-mail:
                input(type='email' name='email' required maxlength="60")
          else
            .campo
                label(for='password') Contraseña:
                input(type='password' name='password' required maxlength="60")
            .campo
                label(for='confirmarpassword') Confirmar contraseña:
                input(type='password' name='confirmarpassword' required maxlength="60")
          .campo
              input.btn-login(type='submit' value="Reestablecer password")
          p ¿Ya te acordaste? 
            a(href="/iniciar-sesion" style="color:#8de4af") Iniciar sesión
    
    include partials/footer
